<?xml version="1.0" encoding="utf-8"?>

<resources>
    <declare-styleable name="PayBar">
        <attr name="icon" format="reference"/>
        <attr name="name" format="string"/>
        <attr name="name_size" format="dimension"/>
        <attr name="name_color" format="color"/>
        <attr name="select_bg" format="reference"/>
        <attr name="common_type" format="enum">
            <enum name="wechat" value="1"/>
            <enum name="alipay" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="AvatarImageBehavior">
        <attr name="finalYPosition" format="dimension"/>
        <attr name="startXPosition" format="dimension"/>
        <attr name="startToolbarPosition" format="dimension"/>
        <attr name="startHeight" format="dimension"/>
        <attr name="finalHeight" format="dimension"/>
    </declare-styleable>
</resources>