<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/normal_446dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_bg_fff_r10"
    android:orientation="vertical"
    android:padding="@dimen/normal_38dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="标题"
        android:textColor="#333333"
        android:textSize="@dimen/normal_28sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_28dp"
        android:text="请输入内容"/>

    <EditText
        android:id="@+id/et_organization_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_28dp"
        android:background="@drawable/shape_bg_frame_dadada_r26"
        android:hint="请输入内容"
        android:padding="@dimen/normal_16dp"
        android:textSize="@dimen/normal_24sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_33dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button_frame_dadada_r45"
            android:paddingBottom="@dimen/normal_14dp"
            android:paddingLeft="@dimen/normal_49dp"
            android:paddingRight="@dimen/normal_49dp"
            android:paddingTop="@dimen/normal_14dp"
            android:text="取消"
            android:textColor="#333752"
            android:textSize="@dimen/normal_28sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/normal_1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button_333752_r45"
            android:paddingBottom="@dimen/normal_14dp"
            android:paddingLeft="@dimen/normal_49dp"
            android:paddingRight="@dimen/normal_49dp"
            android:paddingTop="@dimen/normal_14dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_28sp"/>


    </LinearLayout>
</LinearLayout>