<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/normal_24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_dianou"/>

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_13dp"
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_30dp"
            tools:text="OBC旗舰店"/>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/normal_1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_contact_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系商家"
            android:textColor="#03b5fe"
            android:textSize="@dimen/normal_26sp"/>
    </LinearLayout>

</LinearLayout>