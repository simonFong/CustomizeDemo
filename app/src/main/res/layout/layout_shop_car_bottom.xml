<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_all_select"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/normal_24dp"
        android:paddingRight="@dimen/normal_24dp">

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_select_tick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_11dp"
            android:text="全选"
            android:textColor="#bfbfbf"
            android:textSize="@dimen/normal_28sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/normal_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计："
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_26sp"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_10dp"
            android:textColor="#fb6d74"
            android:textSize="@dimen/normal_26sp"
            tools:text="￥ "/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_delect_bg"
        android:paddingBottom="@dimen/normal_34dp"
        android:paddingLeft="@dimen/normal_49dp"
        android:paddingRight="@dimen/normal_49dp"
        android:paddingTop="@dimen/normal_34dp"
        android:text="删除"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_settlement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_settlement_bg"
        android:paddingBottom="@dimen/normal_34dp"
        android:paddingLeft="@dimen/normal_49dp"
        android:paddingRight="@dimen/normal_49dp"
        android:paddingTop="@dimen/normal_34dp"
        android:text="结算"
        android:textColor="@color/white"/>
</LinearLayout>