<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="灯"/>

        <cn.bingoogolapple.qrcode.zxing.ZXingView
            android:id="@+id/zxingview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:qrcv_animTime="1200"
            app:qrcv_cornerColor="#69dfbc"
            app:qrcv_cornerLength="@dimen/normal_70dp"
            app:qrcv_cornerSize="@dimen/normal_6dp"
            app:qrcv_customScanLineDrawable="@mipmap/xian"
            app:qrcv_isBarcode="false"
            app:qrcv_isOnlyDecodeScanBoxArea="true"
            app:qrcv_isScanLineReverse="true"
            app:qrcv_isShowDefaultGridScanLineDrawable="false"
            app:qrcv_isShowDefaultScanLineDrawable="false"
            app:qrcv_isShowTipBackground="true"
            app:qrcv_isShowTipTextAsSingleLine="false"
            app:qrcv_isTipTextBelowRect="true"
            app:qrcv_maskColor="#92000000"
            app:qrcv_qrCodeTipText="对准二维码"
            app:qrcv_rectWidth="@dimen/normal_452dp"
            app:qrcv_scanLineColor="#A9D7FB"
            app:qrcv_scanLineMargin="0dp"
            app:qrcv_scanLineSize="@dimen/normal_1dp"
            app:qrcv_tipBackgroundColor="@color/transparent"
            app:qrcv_tipTextColor="@android:color/white"
            app:qrcv_tipTextSize="@dimen/normal_30dp"
            app:qrcv_toolbarHeight="0dp"
            app:qrcv_topOffset="@dimen/normal_331dp"/>
    </RelativeLayout>

</LinearLayout>
